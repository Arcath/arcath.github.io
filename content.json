---
---
{
  {% for post in site.posts %}
    {% capture html %}
      {% include post.html %}
    {% endcapture %}
    "{{ post.url | slugify }}": {
      "title": "{{ post.title | xml_escape }}",
      "url": "{{ post.url | xml_escape }}",
      "summary": "{{ post.content | strip_html | strip_newlines | truncatewords: 50 | xml_escape }}",
      "html": "{{ html | strip_newlines | xml_escape }}"
    },
  {% endfor %}
  {% for page in site.pages %}
    {% capture html %}
      {% include page.html %}
    {% endcapture %}
    "{{ page.url | slugify }}": {
      "title": "{{ page.title | xml_escape }}",
      "url": "{{ page.url | xml_escape }}.html",
      "summary": "{{ page.content | strip_html | strip_newlines | truncatewords: 50 | xml_escape }}",
      "html": "{{ html | strip_newlines | xml_escape }}"
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
}
